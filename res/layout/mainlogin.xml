<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/loginpage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

    >


    <ImageView
        android:id="@id/login_logoimg"
        android:layout_width="125dp"
        android:layout_height="125dp"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp"

        android:src="@drawable/train"/>

    <TextView
        android:id="@+id/sysname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logoimg"
        android:layout_centerHorizontal="true"
        android:text="Multi-function Ultrasonic Inspection System"
        android:textColor="@color/blue"
        android:textSize="30sp"/>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sysname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
    <TextView
        android:id="@+id/login_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="用户名:"

        android:textSize="30sp"/>

    <EditText
        android:id="@+id/login_et_username"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_tv_username"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/login_tv_username"
        android:singleLine="true"
        />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_alignRight="@+id/relative1"
        android:layout_below="@+id/relative1"
        android:layout_marginTop="20dp"
        >

    <TextView
        android:id="@+id/login_tv_userpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:text="密码:"
        android:textSize="30sp"/>

    <EditText

        android:id="@+id/login_et_userpassword"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_tv_userpassword"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/login_tv_userpassword"
        android:inputType="numberPassword"
        android:singleLine="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/relative2"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="20dp"
        >
    <CheckBox
        android:id="@+id/checkBox_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/login_bt_register"
        android:layout_marginRight="50dp"
        android:layout_alignBottom="@+id/login_bt_register"
        android:text="记住用户名"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/login_bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"


        android:text="用户注册"
        android:textSize="20sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/login_bt_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/relative3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/qz_selector_login"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="30sp"
        />


</RelativeLayout>
