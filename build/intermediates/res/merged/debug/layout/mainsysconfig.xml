<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:gravity="center"
        android:text="预设参数"

        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="通道报警设置"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView5"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="20dp"
            android:text="0°" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner1"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/spinner1"
            android:text="轨头K扫"/>
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner2"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/spinner2"
            android:text="轨头串列"/>
        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="20dp"
            android:text="轨底K扫" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner4"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/spinner4"
            android:text="左角70°"/>
        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner5"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/spinner5"
            android:text="右角70°"/>
        <Spinner
            android:id="@+id/spinner6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView7" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textView7"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="通道波形颜色设置"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView5"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="20dp"
            android:text="0°" />

        <Spinner
            android:id="@+id/spinner7"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner7"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/spinner7"
            android:text="轨头K扫"/>
        <Spinner
            android:id="@+id/spinner8"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner8"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/spinner8"
            android:text="轨头串列"/>
        <Spinner
            android:id="@+id/spinner9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView11"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="20dp"
            android:text="轨底K扫" />

        <Spinner
            android:id="@+id/spinner10"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView12"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner10"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/spinner10"
            android:text="左角70°"/>
        <Spinner
            android:id="@+id/spinner11"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView13"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner11"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/spinner11"
            android:text="右角70°"/>
        <Spinner
            android:id="@+id/spinner12"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView14"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView14" />

        <Button
            android:id="@+id/sysbutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="20dp"
            android:text="保存"/>

        <Button
            android:id="@+id/sysbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/sysbutton1"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="20dp"
            android:text="取消"/>
    </RelativeLayout>

   
</LinearLayout>